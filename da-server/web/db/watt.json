{
  "$schema": "https://schemas.platformatic.dev/@platformatic/db/2.74.1.json",
  "db": {
    "connectionString": "{PLT_DB_DATABASE_URL}",
    "graphql": false,
    "openapi": true,
    "schemalock": true
  },
  "watch": {
    "ignore": [
      "*.sqlite",
      "*.sqlite-journal"
    ]
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": "{PLT_DB_APPLY_MIGRATIONS}"
  },
  "plugins": {
    "paths": [
      {
        "path": "./plugins",
        "encapsulate": false
      },
      {
        "path": "./routes"
      }
    ],
    "typescript": true
  },
  "types": {
    "autogenerate": true
  }
}